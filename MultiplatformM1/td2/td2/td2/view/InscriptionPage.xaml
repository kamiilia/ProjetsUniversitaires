<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="td2.view.InscriptionPage">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="{Binding Error}"  />
            <Entry Placeholder="tapez votre email" Text="{Binding Login.Email}"  />
            <Entry  Placeholder="tapez votre Nom" Text="{Binding Login.LastName}"  />
            <Entry  Placeholder="tapez votre Prenom" Text="{Binding Login.FirstName}"  />
            <Entry IsPassword="True" Placeholder="tapez votre password" Text="{Binding Login.Password}"  />
            <Button Text="Inscription" Clicked="Inscription" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>